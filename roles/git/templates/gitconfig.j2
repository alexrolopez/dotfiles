[core]
        editor = vim
        excludesfile = ~/.gitignore_global
[user]
        email = {{ git_user_email }}
        name = {{ git_user_name }}
[init]
        defaultBranch = main
[pull]
        rebase = true
[rebase]
        autoStash = true
[url "git@github.com:"]
        insteadOf = https://github.com/
[diff "sopsdiffer"]
        textconv = "sops -d"
